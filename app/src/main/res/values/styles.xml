<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonsStyle" parent="Theme.Autoshare">
        <item name="background">@drawable/rounded_corners_box_white</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="drawableTint">@color/dark_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="ActionButtonsStyle" parent="Theme.Autoshare">
        <item name="android:textColor">@color/app_white</item>
        <item name="drawableTint">@color/dark_red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeadingsStyle" parent="Theme.Autoshare">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputTextStyle" parent="Theme.Autoshare">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:padding">14dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textColorHint">@color/darker_app_white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>