<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.user.vehicles.ExtraInfoSelectableFragment">

    <data>

        <variable
            name="extraInfoSelectableFragment"
            type="com.riteh.autoshare.ui.home.user.vehicles.ExtraInfoSelectableFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="85dp"
            android:background="@color/app_white">

            <RelativeLayout
                android:id="@+id/rl_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_baseline_close_24"
                    app:tint="@color/basic_red" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_close"
                    android:background="@color/app_white">

                    <TextView
                        android:id="@+id/tv_heading"
                        style="@style/HeadingsStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="0dp"
                        android:text="@string/tell_us_a_bit_about_your_vehicle_s_specifications"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_subheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_heading"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"

                        android:fontFamily="sans-serif-thin"
                        android:text="@string/if_you_re_not_sure"
                        android:textColor="@color/light_grey"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/rl_type_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_subheading"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_corners_box_outline_red">

                        <ImageView
                            android:id="@+id/iv_type"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_baseline_directions_car_24"
                            app:tint="@color/dark_grey" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iv_type"
                            android:text="@string/type"
                            android:textColor="@color/light_grey" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_transmission_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_type_wrapper"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corners_box_outline_red">

                        <ImageView
                            android:id="@+id/iv_transmission"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_transmission" />

                        <TextView
                            android:id="@+id/tv_transmission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iv_transmission"
                            android:text="@string/transmission"
                            android:textColor="@color/light_grey" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_fuel_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_transmission_wrapper"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corners_box_outline_red">

                        <ImageView
                            android:id="@+id/iv_fuel"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_fuel" />

                        <TextView
                            android:id="@+id/tv_fuel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iv_fuel"
                            android:text="@string/fuel_type"
                            android:textColor="@color/light_grey" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_drivetrain_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_fuel_wrapper"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corners_box_outline_red">

                        <ImageView
                            android:id="@+id/iv_drivetrain"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_drivetrain" />

                        <TextView
                            android:id="@+id/tv_drivetrain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iv_drivetrain"
                            android:text="@string/drivetrain"
                            android:textColor="@color/light_grey" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_colour_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_drivetrain_wrapper"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corners_box_outline_red">

                        <ImageView
                            android:id="@+id/iv_colour"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_baseline_color_lens_24"
                            app:tint="@color/dark_grey" />

                        <TextView
                            android:id="@+id/tv_colour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iv_colour"
                            android:text="@string/colour"
                            android:textColor="@color/light_grey" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_tyre_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_colour_wrapper"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corners_box_outline_red">

                        <ImageView
                            android:id="@+id/iv_tyre"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_tyre"
                            app:tint="@color/dark_grey" />

                        <TextView
                            android:id="@+id/tv_tyre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iv_tyre"
                            android:text="@string/tyres"
                            android:textColor="@color/light_grey" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_parking_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_tyre_wrapper"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/rounded_corners_box_outline_red">

                        <ImageView
                            android:id="@+id/iv_parking"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_baseline_local_parking_24"
                            app:tint="@color/dark_grey" />

                        <TextView
                            android:id="@+id/tv_parking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iv_parking"
                            android:text="@string/parking_sensors"
                            android:textColor="@color/light_grey" />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="5dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/btn_prev"
                style="@style/PrevButtonsStyle"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
                android:text="@string/prev"
                android:visibility="invisible"
                app:drawableTint="@color/basic_grey" />


            <Button
                android:id="@+id/btn_next"
                style="@style/NextButtonsStyle"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                android:text="@string/next"
                app:drawableTint="@color/app_white" />

        </LinearLayout>
    </RelativeLayout>
</layout>
